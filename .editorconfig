# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.yaml]
indent_size = 2
[*.yml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 4

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.css]
indent_size = 2
[*.scss]
indent_size = 2

# JavaScript/TypeScript files
[*.js]
indent_size = 2
[*.ts]
indent_size = 2
[*.jsx]
indent_size = 2
[*.tsx]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 2

# Configuration files
[*.ini]
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 4

# Log files
[*.log]
trim_trailing_whitespace = false

# Environment files
[*.env]
indent_size = 2
trim_trailing_whitespace = false

# Test files
[test_*.py]
indent_size = 4